<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>Java Utils</name>
    <groupId>de.lcraft.lapi</groupId>
    <artifactId>javaUtils</artifactId>
    <version>${lapi.versions.JavaUtils}</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.target>${lapi.options.java.version}</maven.compiler.target>
        <maven.compiler.source>${lapi.options.java.version}</maven.compiler.source>
    </properties>

    <build>
        <plugins>
            <!-- To compile the project !-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${lapi.plugin_versions.compiler.version}</version>
                <configuration>
                    <source>${lapi.options.java.version}</source>
                    <target>${lapi.options.java.version}</target>
                </configuration>
            </plugin>

            <!-- For JUnit !-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${lapi.plugin_versions.surefire.version}</version>
            </plugin>

            <!-- To see if some dependencies are outdated !-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>${lapi.plugin_versions.versions.version}</version>
                <configuration>
                    <rulesUri>file:///${project.basedir}/../rules.xml</rulesUri>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>display-dependency-updates</goal>
                            <goal>display-plugin-updates</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- Local dependencies witch will be included if you package/compile-->

        <!-- Dependencies with will be included if you package/compile -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${lapi.imports.versions.apache_commons_lang_3}</version>
            <scope>compile</scope>
        </dependency>
        <!-- <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>LATEST</version>
            <scope>compile</scope>
        </dependency>
        -->

        <!-- Dependencies that will test if you package/compile -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${lapi.imports.versions.jUnit}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
